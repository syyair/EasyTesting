<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- android:updatePeriodMillis="10000"> -->

    <LinearLayout
        android:id="@+id/ll_float"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:background="@drawable/assist_flow_bk"
        android:gravity="center_vertical"
        android:orientation="horizontal" >


        <TextView
            android:id="@+id/tv_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="memory "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_cpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="cpu"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_float2"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:background="@drawable/assist_flow_bk"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_traffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="traffic"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="battery"
            android:textColor="#000000" />
    </LinearLayout>


</LinearLayout><!-- From: file:/E:/EasyTesting.git/trunk/app/src/main/res/layout/floating.xml -->